#term
"urxvtc"
   Shift+Mod4 + Return

#browser
"$BROWSER"
   Mod4 + w

#play/pause
"mpc toggle"
   Control+Alt + Up

#play/pause (XF86)
"mpc toggle"
   XF86AudioPlay

#stop
"mpc stop"
   Control+Alt + Down

#forward
"mpc next"
   Control+Alt + Right

#forward (XF86)
"mpc next"
   XF86AudioNext

#previous
"mpc prev"
   Control+Alt + Left

#previous (XF86)
"mpc prev"
   XF86AudioPrev

#screenshot
"scrot '%Y-%m-%d_%H-%M-%S.png' -e 'mv $f /home/pschmitt/pictures/scrot/'"
   Print

#screenshot in 3secs
"scrot -d 3 '%Y-%m-%d_%H-%M-%S.png' -e 'mv $f /home/pschmitt/pictures/scrot'"
   Control + Print

#lock
"i3lock -b -i /home/pschmitt/pictures/wallpapers/me\ gusta\ mucho_1366.png"
   Mod4 + Super_L

#htop
"urxvtc -e htop"
   Control+Alt + Delete

#rewind
"mpc seek -00:00:01"
   Shift + Left

#fast_forward
"mpc seek +00:00:01"
   Shift + Right

#iTan
"gksudo mupdf /home/pschmitt/docs/banking/comdirect/iTAN_02.pdf"
   Alt+Mod4 + i

#vol_up
"pamixer --allow-boost --increase 5; pamixer --unmute"
    m:0x10 + c:123
    Mod2 + XF86AudioRaiseVolume

#vol_down
"pamixer --allow-boost --decrease 5; pamixer --unmute"
    m:0x10 + c:122
    Mod2 + XF86AudioLowerVolume

#mute
"pamixer --toggle"
   XF86AudioMute

#hibernate
"systemctl hibernate"
   XF86Sleep

#branlette
"LD_PRELOAD=/usr/lib/libfullscreenhack.so firefox -P ''porn'' -no-remote -private"
   Alt+Mod2+Mod4 + w

#vlc next
"vlc_clirc next"
   Mod2 + XF86AudioNext

#vlc previous
"vlc_clirc prev"
   Mod2 + XF86AudioPrev

#vlc play/pause
"vlc_clirc toggle"
   Mod2 + XF86AudioPlay

#xbmc
"xbmc"
   Shift+Mod2+Mod4 + x

